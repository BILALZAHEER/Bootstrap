<%if user_signed_in? %>
<% title "-All Students" %>
  <div class="container">
    <table class="table table-striped">
    <p id="notice"><%= notice %></p>
      <thead>
        <tr>
          <th><strong>Name</strong></th>
          <th><strong>Age</strong></th>
          <th><strong>RollNo</strong></th>
          <th><strong>Email</strong></th>
          <th><strong>City</strong></th>
          <th><strong>Options</strong></th>
        </tr>
      </thead>
    <tbody>
      <% @students.each do |student| %>
        <tr>
          <td><%= student.name %></td>
          <td><%= student.age %></td>
          <td><%= student.rollno %></td>
          <td><%= student.email %></td>
          <td><%= student.City %></td>
          <div class="btn_group">
          <td><%= link_to 'Show', student , class: 'btn btn-primary btn-success' %>
          <%= link_to 'Edit', edit_student_path(student) , class: 'btn btn-primary  btn-success' %>
          <%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-primary btn-success' %></td>
        </div>
        </tr>
      <% end %>
    </tbody>
    </table>
  </div>
<% end %>